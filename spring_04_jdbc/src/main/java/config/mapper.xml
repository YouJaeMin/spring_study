<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mem">
	<select id="all" resultType="part03.MemDTO">
		select * from mem order by num desc
	</select>
	
	<insert id="ins" parameterType="part03.MemDTO">
		insert into mem
		values(mem_num_seq.nextval, #{name}, #{age}, #{loc})
	</insert>
	
	<update id="upd" parameterType="part03.MemDTO">
		update mem set name = #{name} where num = #{num}
	</update>
	
	<delete id="del" parameterType="java.lang.Integer">
		delete from mem
		where num = #{num}
	</delete>
	
</mapper>

